<div class="conteiner">
  <div class="contents-title text-center py-3 pb-4">
    <h1 class="text-black-50 font-weight-lighter">会員一覧</h1>
  </div>
  <div class="row">
    <div class="col-10 mx-auto py-5">
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th>ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td>
              <%= link_to admin_customer_path(customer.id) do %>
              <%= customer.last_name %><%= customer.first_name %>
              <% end %>
            </td>
            <td><%= customer.email %></td>
            <% if customer.is_deleted == false %>
            <td>無効</td>
            <% else %>
            <td>有効</td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>