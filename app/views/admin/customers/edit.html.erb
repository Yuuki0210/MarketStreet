<div class="mx-auto text-center">
<% if notice %>
  <div class="alert alert-success"><%= flash[:notice] %></div>
<% elsif alert %>
  <div class="alert alert-danger" role="alert"><%= flash[:alert] %></div>
<% end %>
</div>
<div class="card-list-container py-5">
  <%= form_with model:@customer, url: admin_customer_path, local:true do |f| %>
  <div class="contents-title text-center py-3 pb-4">
    <h2 class="text-black-50 font-weight-lighter"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集画面</h2>
  </div>
  <div class="card col-7 mx-auto mt-3 shadow p-2 mb-5">
    <div class="row pl-5">
      <div class="col-5 py-3 pl-5">
        <div class="imput-block">
          <%= f.label "姓" %>
          <%= f.text_field :last_name, class:"form-control" %>
        </div>
      </div>
      <div class="col-5 py-3 pl-5">
        <div class="imput-block">
          <%= f.label "名" %>
          <%= f.text_field :first_name, class:"form-control" %>
        </div>
      </div>
    </div>
    <div class="row pl-5">
      <div class="col-5 py-3 pl-5">
        <div class="imput-block">
          <%= f.label "セイ" %>
          <%= f.text_field :kana_last_name, class:"form-control" %>
        </div>
      </div>
      <div class="col-5 py-3 pl-5">
        <div class="imput-block">
          <%= f.label "メイ" %>
          <%= f.text_field :kana_first_name, class:"form-control" %>
        </div>
      </div>
    </div>
    <div class="row pl-5">
      <div class="col-5 py-3 pl-5">
        <div class="imput-block">
          <%= f.label "郵便番号" %>
          <%= f.text_field :postal_code, class:"form-control" %>
        </div>
      </div>
    </div>
    <div class="row pl-5">
      <div class="col-8 py-3 pl-5">
        <div class="imput-block">
          <%= f.label "住所" %>
          <%= f.text_field :address, class:"form-control" %>
        </div>
      </div>
    </div>
    <div class="row pl-5">
      <div class="col-5 py-3 pl-5">
        <div class="imput-block">
          <%= f.label "電話番号" %>
          <%= f.text_field :phone_number, class:"form-control" %>
        </div>
      </div>
    </div>
    <div class="row pl-5">
      <div class="col-8 py-3 pl-5">
        <div class="imput-block">
          <%= f.label "メールアドレス" %>
          <%= f.text_field :email, class:"form-control" %>
        </div>
      </div>
    </div>
    <div class="row pl-5">
      <div class="col-8 py-3 pl-5">
        <div class="imput-block">
          <%= f.label "会員ステータス" %> <br />
          <%= f.radio_button :is_deleted, true %>
          <%= f.label :is_deleted, "有効", value: true %>
          <%= f.radio_button :is_deleted, false %>
          <%= f.label :is_deleted, "無効", value: false %>
        </div>
      </div>
    </div>
    <div class="col-10 mx-auto">
      <%= f.submit '変更を保存する', class:"btn btn-success btn-block py-2 m-3" %>
    </div>
    </div>
  </div>
  <% end %>
