  <% if flash[:notice] %>
    <%= notice %>
  <% else flash[:alert] %>
    <%= alert %>
  <% end %>
  <div class="card-list-container py-5">
  <%= form_with model: [:admin, @genre], local:true do |f| %>
  <div class="contents-title text-center py-3 pb-4">
    <h2 class="text-black-50 font-weight-lighter">ジャンル編集</h2>
  </div>
  <div class="card w-50  mx-auto mt-2 shadow p-2">
    <div class="col-10 mx-auto py-3">
      <div class="imput-block">
        <%= f.label :name, "ジャンル名" %>
        <%= f.text_field :name, class:"form-control" %>
      </div>
    </div>
    <div class="col-5 mx-auto">
        <%= f.submit '変更を保存', class:"btn btn-success btn-block" %>
    </div>
    <% end %>
  </div>