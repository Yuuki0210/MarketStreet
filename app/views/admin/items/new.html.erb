<div class="container">
  <h1>新規商品登録</h1>
  <%= form_with model: [:admin, @item], local:true do |f| %>
    <div class="row">
      <table>
        <tbody>
          <tr>
            <td>商品画像</td>
            <td></td>
            <!--参考URL=>https://qiita.com/hmmrjn/items/7cc5e5348755c517458a-->
          </tr>
          <tr>
            <td>商品名</td>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= f.text_area :explanation %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= f.collection_select :genre_id, Genre.all, :id, :name %></td>
            <!--参考URL=>https://qiita.com/Yu-8chan/items/58528f3ae5d4e0558bd5-->
          </tr>
          <tr>
            <td>税抜き価格</td>
            <td><%= f.text_field :price %></td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <td>
              <%= f.radio_button :is_active, true %>
              <%= f.label :is_active, "販売中", {value: :true} %>
              <%= f.radio_button :is_active, false %>
              <%= f.label :is_active, "販売停止中", {value: :false} %>
              <!--参考URL=>https://nnnamani.com/blog/how-to-use-radio-button-on-rails/-->
            </td>
          </tr>
          <tr>
            <td><%= f.submit '新規登録' %></td>
          </tr>
        </tbody>
      </table>
    </div>
  <% end %>
</div>