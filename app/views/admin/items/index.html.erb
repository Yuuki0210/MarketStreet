<div class="mx-auto text-center">
<% if notice %>
  <div class="alert alert-success"><%= flash[:notice] %></div>
<% elsif alert %>
  <div class="alert alert-danger" role="alert"><%= flash[:alert] %></div>
<% end %>
</div>
<div class="container">
    <div class="row py-5">
      <div class="col-12">
        <table class="table">
          <thead class="thead-dark">
            <tr>
              <th>ID</th>
              <th>商品名</th>
              <th>税抜き価格</th>
              <th>ジャンル</th>
              <th>販売ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name, admin_item_path(item) %></td>
              <td><%= item.price %>円</td>
              <td><%= item.genre.name %></td>
              <% if item.is_active == true %>
                <% status = "販売中" %>
              <% else %>
                <% status = "販売停止中" %>
              <% end %>
              <td><%= status %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <div class="col-8 mx-auto text-center p-4">
          <%= link_to '商品の新規登録', new_admin_item_path, class:"btn btn-success btn-block py-2" %>
        </div>
      </div>
    </div>
</div>
<div class="page-link btn-lg mb-5">
<%= paginate @items %>
</div>
