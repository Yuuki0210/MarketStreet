<div class="container">
  <h1>商品詳細編集</h1>
  <%= form_with model: [:admin, @item], local:true do |f| %>
    <div class="row">
      <table>
        <tbody>
          <tr>
            <td>商品画像</td>
            <td><%= f.file_field :image_id %></td>
          </tr>
          <tr>
            <td>商品名</td>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= f.text_area :explanation %></td>
          </tr>
          <tr>
            <td>ジャンル </td>
            <td><%= f.collection_select :genre_id, Genre.all, :id, :name %></td>
          </tr>
          <tr>
            <td>税抜き価格</td>
            <td><%= f.text_field :price %></td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <td>
              <%= f.radio_button :is_active, true %>
              <%= f.label :is_active, "販売中", {value: :true} %>
              <%= f.radio_button :is_active, false %>
              <%= f.label :is_active, "販売停止中", {value: :false} %>
            </td>
          </tr>
          <tr>
            <td><%= f.submit '変更を保存' %></td>
          </tr>
        </tbody>
      </table>
    </div>
  <% end %>
</div>