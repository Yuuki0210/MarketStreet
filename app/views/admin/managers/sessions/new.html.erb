<div class="card-list-container py-5 mx-auto">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="contents-title text-center py-3 pb-4">
    <h2 class="text-black-50 font-weight-lighter">LOGIN</h2>
  </div>
  <div class="card w-50  mx-auto mt-3 shadow p-2 mb-5">
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
    </div>
    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
    </div>
    <div class="actions mx-auto col-6 pl-3">
      <%= f.submit "ログインする",class: "btn btn-success btn-block py-2 m-3" %>
    </div>
  </div>
<% end %>
</div>
