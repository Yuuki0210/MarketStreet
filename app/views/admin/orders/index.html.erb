<div class="container">
  <div class="contents-title text-center py-4 pb-4">
    <h1 class="text-black-50 font-weight-lighter">注文履歴一覧</h1>
  </div>
  <div class="row py-5">
    <table class="table">
      <thead class="thead-dark">
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td><%= link_to "#{order.created_at.strftime("%Y/%m/%d %H:%M:%S")}", admin_order_path(order.id) %></td>
          <td><%= order.name %></td>
          <td>
            <% @sum = 0 %>
            <% order.order_items.each do |order_item| %>
            <% @sum += order_item.piece %>
            <% end %>
            <%= "#{@sum}" %>
          </td>
          <td><%= order.status %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="page-link btn-lg mb-5">
  <%= paginate @orders %>
</div>