<div class="container">
  <h1>注文履歴詳細</h1>
  <div class="row">
    <table>
      <tr>
        <th>購入者</th>
        <td><%= @order.name %></td>
      </tr>
      <tr>
        <th>注文日</th>
        <td><%= @order.created_at.strftime('%y/%m/%d') %></td>
      </tr>
      <tr>
        <th>配達先</th>
        <td>
          〒<%= @order.postal_code %><br />
          <%= @order.address %>
        </td>
      </tr>
      <tr>
        <th>支払い方法</th>
        <td><%= @order.payment_method %></td>
      </tr>
      <tr>
        <th>注文ステータス</th>
        <td>
          <%= form_with model:[:admin, @order], method: :patch, local:true do |f| %>
          <%= f.select :status, Order.statuses.keys, {},{class: "select-sefault"} %>
          <%= f.submit '更新' %>
          <% end %>
        </td>
      </tr>
    </table>
  </div>
  <divclass="row">
    <table>
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% sum = 0 %>
        <% @order_items.each do |order_item| %>
        <td><%= order_item.item.name %></td>
        <td><%= order_item.texed_price %></td>
        <td><%= order_item.piece %>個</td>
        <td><%= order_item.texed_price * order_item.piece %></td>
        <% price = order_item.texed_price * order_item.piece %>
        <% sum += price %>
        <% end %>
      </tbody>
    </table>
    <div class="row">
      <table>
        <tr>
          <th>商品合計</th>
          <td><%= sum %></td>
        </tr>
        <tr>
          <th>配達送料</th>
          <td><%= @order.postage %></td>
        </tr>
        <tr>
          <th>請求額合計</th>
          <td><%= @order.total_amount %></td>
        </tr>
      </table>
    </div>
  </div>
</div>