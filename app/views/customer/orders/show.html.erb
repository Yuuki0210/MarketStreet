<div class="container">
  <div class="row">
    <h1>注文履歴詳細</h1>
  </div>
  <div class="row">
    <p>注文情報</p>
    <table>
      <tr>
        <th>注文日</th>
        <th><%= @order.created_at.strftime('%Y/%m/%d') %></th>
      </tr>
      <tr>
        <th>配送先</th>
        <th>
          〒<%= @order.postal_code %><br />
          <%= @order.address %><br />
          <%= @order.name %>
        </th>
      </tr>
      <tr>
        <th>支払い方法</th>
        <th><%= @order.payment_method %></th>
      </tr>
      <tr>
        <th>ステータス</th>
        <th><%= @order.status %></th>
      </tr>
    </table>
    <p>請求情報</p>
    <table>
      <tr>
        <th>商品合計</th>
        <th>
          <% @sum = 0 %>
          <% @order.order_items.each do |order_item| %>
          <% @sum += (order_item.item.price*order_item.piece).round %>
          <% end %>
          <%= "#{@sum.to_s(:delimited)}" %>
        </th>
      </tr>
      <tr>
        <th>配送料</th>
        <th><%= @order.postage %></th>
      </tr>
      <tr>
        <th>ご請求額</th>
        <th><%= "#{@order.total_amount.to_s(:delimited)}" %></th>
      </tr>
    </table>
    <p>注文内容</p>
    <table>
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @order.order_items.each do |order_item| %>
        <tr>
          <th><%= order_item.item.name %></th>
          <th><%= order_item.texed_price.round.to_s(:delimited) %></th>
          <th><%= order_item.piece %></th>
          <th><%= (order_item.texed_price*order_item.piece).round.to_s(:delimited) %></th>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>