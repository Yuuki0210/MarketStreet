<div class="container">
  <div class="row">
    <div class="col-12">
    <h1 class="text-black-50 font-weight-lighter text-center py-5">注文情報一覧</h1>
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td><%= order.address %></td>
            <td>
              <% order.order_items.each do |order_item| %>
              <%= order_item.item.name %><br />
              <% end %>
            </td>
            <td><%= "￥#{order.total_amount.to_s(:delimited)}"%> </td>
            <td><%= order.status %></td>
            <td><%= link_to "詳細", order_path(order.id), class:"btn btn-outline-dark btn-sm" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="page-link btn-lg mb-5">
  <%= paginate @orders %>
</div>
