<div class="container">
  <div class="row">
    <h1>注文情報確認</h1>
  </div>
  <%= form_with model:@order, url: orders_path, local:true do |f| %>
  <div class="row">
    <table>
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% sum = 0 %>
        <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= cart_item.item.name %></td>
          <td>￥<%= (cart_item.item.price*1.1).round.to_s %></td>
          <td><%= cart_item.piece %>個</td>
          <td>￥<%= cart_item.item.price = (cart_item.item.price * 1.1).round.to_s %></td>
          <% cart_item.item.price = (cart_item.item.price*1.1).round.to_s %>
          <% price = cart_item.item.price*cart_item.piece %>
          <% sum += price %>
        </tr>
        <% end %>
      </tbody>
    </table>
    <table>
      <tr>
        <th>送料</th>
        <td>￥<%= @order.postage %></td>
      </tr>
      <tr>
        <th>商品合計</th>
        <td>￥<%= sum %></td>
      </tr>
      <tr>
        <% @order.total_amount = sum + @order.postage %>
        <th>請求額</th>
        <td><%= @order.total_amount %></td>
      </tr>
    </table>
    <table>
      <tr>
        <th>お支払い方法</th>
        <td><%= @order.payment_method %></td>
      </tr>
      <tr>
        <th>お届け先</th>
        <td>
          <%= @order.postal_code %><br />
          <%= @order.address %><br />
          <%= @order.name %>
        </td>
      </tr>
    </table>
    <%= f.hidden_field :payment_method, :value => @order.payment_method %>
    <%= f.hidden_field :postal_code, :value => @order.postal_code %>
    <%= f.hidden_field :address, :value => @order.address %>
    <%= f.hidden_field :name, :value => @order.name %>
    <%= f.hidden_field :customer_id, :value => @order.customer_id %>
    <%= f.hidden_field :postage, :value => @order.postage %>
    <%= f.hidden_field :total_amount, :value => @order.total_amount %>

    <%= f.submit "注文を確定する" %>
    <% end %>
  </div>
</div>