<div class="container pt-3">
  <h1 class="text-center text-black-50 font-weight-lighter py-2 mt-5">MY PAGE</h1>
  <div class="col-8 mx-auto py-5">
    <div class="row">
      <table class="table borderd-table">
        <tbody>
          <tr>
            <td>氏名</td>
            <td><%= @customer.last_name %><%= @customer.first_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= @customer.kana_last_name %><%= @customer.kana_first_name %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td>〒<%= @customer.postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @customer.phone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
        </tbody>
      </table>
      <div class="col-8 mx-auto text-center my-3">
        <%= link_to "編集する", edit_customer_path(@customer.id), class:"btn btn-success btn-block py-2" %>
      </div>
      <div class="col-8 mx-auto text-center my-3">
        <%= link_to "購入履歴を確認する", orders_path, class:"btn btn-secondary btn-lg　py-2" %>
      </div>
    </div>
  </div>
</div>