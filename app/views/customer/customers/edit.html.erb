<div class="card-list-container py-5">
  <%= form_with model:@customer, url: customer_path, local:true do |f| %>
  <div class="contents-title text-center py-3 pb-4">
    <h2 class="text-black-50 font-weight-lighter">MY PAGE 編集</h2>
  </div>
  <div class="card col-7 mx-auto mt-3 shadow p-2 mb-5">
    <div class="row pl-5">
      <div class="col-5 py-3 pl-5">
        <div class="imput-block">
          <%= f.label "姓" %>
          <%= f.text_field :last_name, class:"form-control" %>
        </div>
      </div>
      <div class="col-5 py-3 pl-5">
        <div class="imput-block">
          <%= f.label "名" %>
          <%= f.text_field :first_name, class:"form-control" %>
        </div>
      </div>
    </div>
    <div class="row pl-5">
      <div class="col-5 py-3 pl-5">
        <div class="imput-block">
          <%= f.label "セイ" %>
          <%= f.text_field :kana_last_name, class:"form-control" %>
        </div>
      </div>
      <div class="col-5 py-3 pl-5">
        <div class="imput-block">
          <%= f.label "メイ" %>
          <%= f.text_field :kana_first_name, class:"form-control" %>
        </div>
      </div>
    </div>
    <div class="row pl-5">
      <div class="col-5 py-3 pl-5">
        <div class="imput-block">
          <%= f.label "郵便番号" %>
          <%= f.text_field :postal_code, class:"form-control" %>
        </div>
      </div>
    </div>
    <div class="row pl-5">
      <div class="col-8 py-3 pl-5">
        <div class="imput-block">
          <%= f.label "住所" %>
          <%= f.text_field :address, class:"form-control" %>
        </div>
      </div>
    </div>
    <div class="row pl-5">
      <div class="col-5 py-3 pl-5">
        <div class="imput-block">
          <%= f.label "電話番号" %>
          <%= f.text_field :phone_number, class:"form-control" %>
        </div>
      </div>
    </div>
    <div class="row pl-5">
      <div class="col-8 py-3 pl-5">
        <div class="imput-block">
          <%= f.label "メールアドレス" %>
          <%= f.text_field :email, class:"form-control" %>
        </div>
      </div>
    </div>
      <div class="col-10 mx-auto">
        <%= f.submit '変更を保存する', class:"btn btn-success btn-block py-2 m-3" %>
      </div>
    </div>
  </div>
  <% end %>
</div>
<div class="col-12">
  <h5 class="text-right">退会する方は<%= link_to "こちら", delete_path %>から</h5>
</div>

<div class="container">
  <div class="row">
    <h1><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集画面</h1>
  </div>
  <div class="row">
    <%= form_with model:@customer, url: admin_customer_path, local:true do |f| %>
    <%= f.label "名前" %>
    <span>姓</span>
    <%= f.text_field :last_name %>
    <span>名</span>
    <%= f.text_field :first_name %><br />
    <%= f.label "フリガナ" %>
    <span>セイ</span>
    <%= f.text_field :kana_last_name %>
    <span>メイ</span>
    <%= f.text_field :kana_first_name %><br />
    <%= f.label "郵便番号" %>
    <%= f.text_field :postal_code %><br />
    <%= f.label "住所" %>
    <%= f.text_field :address %><br />
    <%= f.label "電話番号" %>
    <%= f.text_field :phone_number %><br />
    <%= f.label "メールアドレス" %>
    <%= f.text_field :email %><br />
    <%= f.label "会員ステータス" %>
    <%= f.radio_button :is_deleted, true %>
    <%= f.label :is_deleted, "有効", value: true %>
    <%= f.radio_button :is_deleted, false %>
    <%= f.label :is_deleted, "無効", value: false %>
    <%= f.submit "変更を保存" %>
    <% end %>
  </div>
</div>