<div class="texts=wrapper">
  <div class="contents-title text-center">
    <h3>商品一覧</h3>
  </div>
  <div class="row">
    <% @items.each do |item| %>
    <div class="col-12 col-md-6 col-lg-2 pl-4">
      <div class="card">

          <%= image_tag item.image, size: "auto" %>
        <div class="card-body">
          <%= item.name %><br/>
          ￥<%= item.price %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
<div class="next-items"><%= paginate @items %></div>