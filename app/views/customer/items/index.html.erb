<div class="container">
  <div class="row">
    <h1>商品一覧</h1>
    <table>
      <% @items.each do |item| %>
      <tr>
        <td>
          <%= link_to item_path(item) do %>
            <%= image_tag item.image, size: "250x250" %>
          <% end %>
        </td>
        <td>
          <%= link_to item_path(item) do %>
          <%= item.name %>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>